	function fn_save(){		
		oEditors.getById["textnoticeContent"].exec("UPDATE_CONTENTS_FIELD", []);
		var text = $('#textnoticeContent').val();
		var texttrim = replaceAll(text, '&nbsp;', '');
		texttrim = replaceAll(texttrim, ' ', '');
		texttrim = replaceAll(texttrim, '<p></p>', '');
	}
	
</script>
	
